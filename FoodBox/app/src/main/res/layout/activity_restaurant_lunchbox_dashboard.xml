<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".restaurant.RestaurantLunchboxDashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/ll_appBar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@color/background4"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_restAppBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESTAURANT LUNCHBOX DASHBOARD"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_showOrders"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/iv_logout"
                android:src="@drawable/info" />

            <ImageView
                android:id="@+id/iv_logout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/logout" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_showAlllunchbox"
            android:layout_width="wrap_content"
            android:layout_height="570dp"
            android:layout_below="@+id/ll_appBar"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_appBar"
            tools:listitem="@layout/layout_lunchbox" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_createLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="49dp"
            android:backgroundTint="@color/blue"
            android:src="@drawable/ic_baseline_add_24"
            app:fabSize="normal"
            app:tint="@color/white" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>